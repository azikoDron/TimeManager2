#:kivy 1.11.1
#:import Builder kivy.lang
#:import ScrollView kivy.uix.scrollview

<Controller>:
    TopNavBar:

    #TaskMenu:


<TaskMenu>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
    Label:
        size_hint_y: None
        height: self.texture_size[1]
        #text_size: self.width
        padding: 10, 10
        text: 'really some amazing text\n' * 100



<SideBar>:
    canvas.before:
        Color:
            rgba: 232, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint: (.5, .93)
    pos_hint: {'left': 1}





<TopNavBar>:
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.07
        pos_hint: {'top': 1}
        canvas:
            Color:
                rgba: (232, 0, 0, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            size_hint: 0.2, 1
            text: '|||'                                 #+ root.info
            #on_press: root.do_action()
            background_color: 232, 0, 0, 1
            on_press: root.menu_action()
        Label:
            id: my_custom_label
            #text: "Hello"
        Label:
            size_hint: 0.3, 1
            id: my_custom_label
            #text: "Login"
        Button:
            size_hint: 0.2, 1
            text: 'Login'                                 #+ root.info
            #on_press: root.do_action()
            background_color: 232, 0, 0, 1
